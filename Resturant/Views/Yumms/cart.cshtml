@{
    ViewData["Title"] = "Cart Page";
}

@{
    // Variable to hold the total price for all items
    decimal totalPrice = 0;
}

<!-- Cart section -->
<section class="h-100 mt-5 cart">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 ">Shopping Cart</h3>

                </div>


                @foreach (var cart in Model)

                {

                    var itemTotalPrice = cart.Qty * cart.Price;

                    totalPrice += itemTotalPrice;
    
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4 cart-box">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2 ">


                                    <div class="image-box">
                                        <img src="@cart.Image"
                                             class="img-fluid rounded-3" alt="food" style="max-width: 60px; max-height:60px;">
                                    </div>

                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2" style="font-size:15px;">@cart.Name</p>

                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <h5 class="mb-0 fw-normal" style="font-size:15px;">Qty: @cart.Qty</h5>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0 fw-normal" style="font-size:15px;">$@cart.Price</h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">

                                    <form asp-action="Del" asp-route-id="@cart.Id" method="post">
                                        <button type="submit" class="text-danger" style="border: none; background: none; padding: 0; font-size: 14px;">
                                            <i class="fas fa-trash fa-lg" style="font-size: 15px;"></i>
                                        </button>
                                    </form>
                                   
                                </div>
                            </div>
                        </div>
                    </div>

                }
               







            </div>
        </div>

        <!-- Total section -->
        <div class="row">
            <div class="col-12 text-center checkout">
                <h3 class="fw-normal">Total:$@totalPrice </h3>
                <button class="btn">Checkout</button>
            </div>
        </div>



</section>
